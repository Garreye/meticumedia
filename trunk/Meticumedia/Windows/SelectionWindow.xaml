<Window x:Class="Meticumedia.Windows.SelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Selection" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <ListBox Name="lbOptions" Grid.Row="0" SelectionChanged="lbOptions_SelectionChanged" MouseDoubleClick="lbOptions_MouseDoubleClick">
            
        </ListBox>
        
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
            <Button Content="OK" Height="23" Name="btnOk" Width="75" Margin="5" Click="btnOk_Click" />
            <Button Content="Cancel" Height="23" Name="btnCancel" Width="75" Margin="0,5,5,5" Click="btnCancel_Click" />
        </StackPanel>
    </Grid>
</Window>
